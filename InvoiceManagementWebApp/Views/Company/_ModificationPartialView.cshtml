@model InvoiceManagementWebApp.Models.DatabaseModels.Company

<div class="card-body">
    <div class="row">
        <div class="col">
            @Html.ValidationSummary(false, "", new { @class = "ml-3 text-danger" })
        </div>
    </div>

    @{
        using (Ajax.BeginForm("Update", "Company",
            new AjaxOptions { HttpMethod = "post", UpdateTargetId = "CompanyCard", InsertionMode = InsertionMode.Replace, OnSuccess = "LoadTable()" },
            new { id = "CompanyCard" }))
        {

            @Html.HiddenFor(m => m.CompanyId)
            @Html.HiddenFor(m => m.Relation)

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(m => m.Address2, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.PostCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(m => m.PostCode, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.City, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(m => m.City, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nip, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(m => m.Nip, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Regon, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.EditorFor(m => m.Regon, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <button type="button" class="btn btn-sm btn-secondary float-left mt-5" name="BtnReturn" id="BtnReturn" onclick="GoToTableForm()"><i class="zmdi zmdi-long-arrow-return mr-2"></i>Anuluj</button>
                </div>
                <div class="col-4 text-center">
                    <button type="button" class="btn btn-sm btn-danger mt-5" name="btnRemove" id="btnRemove" onclick="Remove(@Html.Raw(Model.CompanyId))"><i class="fas fa-trash-alt mr-2"></i>Usuń</button>
                </div>
                <div class="col-4">
                    <button type="submit" class="btn btn-sm btn-success float-right mt-5" id="BtnAdd" name="BtnAdd"><i class="fas fa-save mr-2"></i>Zaktualizuj</button>
                </div>
            </div>
        }
    }
</div>

