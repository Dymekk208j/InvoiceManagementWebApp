@model IEnumerable<InvoiceManagementWebApp.Models.DatabaseModels.Company>

<div class="card-body">
    <table id="CompaniesTable" class="table table-sm table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th style="width: 10%">#</th>
                <th>Nazwa</th>
                <th>NIP</th>
                <th>REGON</th>
                <th>Miasto</th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                foreach (var company in Model)
                {
                    <tr onclick="GoToModificationForm(@Html.Raw(company.CompanyId))">
                        <td class="pl-2">@Html.Name(company.CompanyId.ToString() + ". ")</td>
                        <td class="pl-2">@Html.Name(company.Name)</td>
                        <td class="pl-2">@Html.Name(company.Nip)</td>
                        <td class="pl-2">@Html.Name(company.Regon)</td>
                        <td class="pl-2">@Html.Name(company.City)</td>
                    </tr>
                }
            }
    </table>
</div>

<button type="button" class="btn btn-sm btn-success float-right mr-3" id="BtnCreateNew" name="BtnCreateNew" onclick="GoToCreateForm()"><i class="zmdi zmdi-file-plus mr-2"></i>Dodaj</button>
